// 作为 VSCode TypeScript Server 静态检查时的配置文件
{
  // 继承根配置
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // @types 包提供的全局类型声明
    // "vitest/globals" 可写可不写，写了就是全局声明，使用时无需 import，不写则需在使用时 import，但作为工程项目，最好不写，避免全局使用一个不常用的局部类型声明
    "types": ["node"],
    // 启用复合项目模式，支持 Project References
    // 必须启用才能使用项目引用和增量编译
    // 但是，应用模式: 不需要启用复合项目模式
    "composite": false,
    // 会覆盖掉 "extends": "../../tsconfig.json" 中的 "baseUrl" 和 "paths"
    "baseUrl": ".",
    "paths": {
      "@mcp-servers/shared": ["../shared/index.ts"],
      "@mcp-servers/shared/*": ["../shared/src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "index.ts"],
  // 排除的文件
  "exclude": ["node_modules", "dist"],
  // 引用依赖的包 (TypeScript Project References)
  "references": [{ "path": "../shared" }]
}
