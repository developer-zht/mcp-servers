{
  "name": "mcp-servers",
  "version": "0.1.0",
  "author": "developerzht@gmail.com",
  "description": "A collection of MCP (Model Context Protocol) servers for AI-powered content summarization",
  "keywords": [
    "mcp",
    "ai"
  ],
  "private": true,
  "type": "module",
  "license": "MIT",
  "files": [
    "dist",
    ".env.example",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/developer-zht/mcp-servers.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "build": "pnpm -r --filter './packages/**' run build",
    "dev": "pnpm -r --parallel --filter './packages/**' run dev",
    "test": "pnpm -r run test",
    "dev:watch": "tsx watch scripts/test-bilibili-api.ts",
    "dev:test-bilibili": "tsx scripts/test-bilibili-api.ts",
    "dev:test-openai": "tsx scripts/test-openai-api.ts",
    "dev:test-gemini": "tsx scripts/test-gemini-api.ts",
    "lint": "eslint \"packages/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "prepare": "husky",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:git",
    "@commitlint/config-conventional": "catalog:git",
    "@eslint/js": "catalog:lint",
    "@types/node": "catalog:common",
    "@typescript-eslint/eslint-plugin": "catalog:lint",
    "@typescript-eslint/parser": "catalog:lint",
    "commitizen": "catalog:git",
    "cz-git": "catalog:git",
    "eslint": "catalog:lint",
    "husky": "catalog:git",
    "lint-staged": "catalog:git",
    "prettier": "catalog:format",
    "tsx": "catalog:common",
    "typescript": "catalog:common",
    "typescript-eslint": "catalog:lint",
    "vitest": "catalog:test",
    "globals": "catalog:common"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
