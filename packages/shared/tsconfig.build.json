// 仅作为 tsc 编译时使用的配置文件
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    // 输出目录
    "outDir": "./dist",
    "rootDir": "./src",
    // composite: true ⇒ 必须能生成 .d.ts
    // 但是，应用模式: 不需要生成 .d.ts (因为是可执行程序,不是库)
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src/**/*"]
}
